@model List<Category>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Category</h3>
    <a asp-area="" asp-controller="Categories" asp-action="Create" class="btn btn-primary">
        Add Category
    </a>
</div>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1; 
        }

        @foreach (var category in Model)
        {
            <tr>
                <td>@counter</td> 
                <td>@category.Category_Name</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                </td>
            </tr>
            counter++; 
        }

    </tbody>
</table>