<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodOrderSystem.styles.css" asp-append-version="true" />
</head>
<body class="vh-100">
    <div class="d-flex h-100">
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px; height: 100vh;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <span class="fs-4">Admin Panel</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link link-dark" aria-current="page" id="homeLink">
                    
                        Home
                    </a>
                </li>
                <li>
                    <a class="nav-link link-dark" id="productsLink" asp-area="" asp-controller="Products" asp-action="Display">

                        Products
                    </a>
                </li>
                <li>
                    <a class="nav-link link-dark" id="categoriesLink" asp-area="" asp-controller="Categories" asp-action="Index">
                        
                        Categories
                    </a>
                </li>
                <li>
                    <a class="nav-link link-dark" id="categoriesLink" asp-area="" asp-controller="Orders" asp-action="Display">
                        Orders
                    </a>
                </li>


            </ul>

            <hr>
        </div>

        <!-- Main Content Area -->
        <div class="flex-grow-1 overflow-auto">
            <nav class="navbar navbar-light bg-light justify-content-end px-4">
                    <partial name="_AdminLoginPartial.cshtml" />
                
         
            </nav>
            <main class="p-4">
                @RenderBody()
            </main>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
